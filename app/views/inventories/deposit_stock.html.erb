<div class="card">
  <div class="card-header data-header">
    <div class="title">
      <%= t('.header') %>
      <% if current_user.group.organization %>
        <sub> (<%= current_user.group.organization.name %>)</sub>
      <% end %>
    </div>
  </div>

  <div class="card-body text-white bg-dark">
    <h5><%= "#{@inventory.product.producer.name} (#{@inventory.product.family.name})"%></h5>
    <h6><%= @inventory.product.name.upcase %></h6>
    <h6><%= @inventory.product.description %></h6>
  </div>

  <div class="card-body">
    <div id="inventories-table-container">
      <%= render 'inventories_detail_table' %>
    </div>
  </div>
</div>