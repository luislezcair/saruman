<%= simple_form_for [:elements, @provider], wrapper: :maxwell_horizontal_form, defaults: { grid_wrapper_html: { class: 'col-sm-9' } } do |f| %>
  <div data-controller="provider">
      <div class="card">
        <div class="card-header"><%= header %></div>

        <div class="card-body">
          <legend class="form-section">
            <i class="fa fa-user"></i> <%= t('.section.basic') %>
          </legend>

          <div class="form-group row string required">
            <%= f.input :name, wrapper: false, grid_wrapper_html: { class: 'col-sm-3' } %>
      
          </div>
    

        </div>

          <div class="fields" id="fields" data-target="provider.fields">
            <%= f.fields_for :contacts do |builder| %>
              <%= render 'contact_fields', f: builder %>
            <% end %>
            <button data-action="click->provider#addContact">
             <%= link_to_add_fields( 'Add Contact', f,:contacts, class: 'btn btn-primary')  %>
            </button>
          </div>

 
        <div class="card-footer">
          <div class="float-right">
            <%= link_to t('.cancel'), elements_providers_path, class: 'btn btn-secondary' %>
            <%= f.button :submit, t('.submit'), class: 'btn btn-primary' %>


            <%# 
                link_to_add_row( 'Add Contact', f,:contacts, class: 'btn btn-primary', data: { action: 'click->provider#addContact'})  %>
                    <%# <button data-action="click->provider#addContact"> %>
                     <%# link_to_add_row( 'Add Contact', f,:contacts, class: 'btn btn-primary')  %>
                    <%# </button> %>
          </div>
        </div>
  </div>
<% end %>
