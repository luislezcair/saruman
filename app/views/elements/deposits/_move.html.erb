<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">
        <%= t('.modal.title') %>
      </h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="<%= t('.modal.close') %>">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    
    <div class="modal-body">
      <div class="card">
        <div class="card-body text-white bg-dark">
          <h5><%= "#{@inventory.product.producer.name} (#{@inventory.product.family.name})"%></h5>
          <h6><%= @inventory.product.name.upcase %></h6>
          <h6><%= @inventory.product.description %></h6>
        </div>
    
        <table id="deposit-move-table" class="table table-responsive-sm table-striped table-hover table-sm table-maxwell-data">
          <thead> 
            <tr>
              <th>Inventario Id</th>
              <th>Dep贸sito</th>
              <th>Direcci贸n</th>
            </tr>
          </thead>

          <tbody>
            <% @inventories.each_with_index do |c, index| %>
              <tr>
                <td><%= c.id %></td>
                <td><%= "#{c.deposit.name} (#{c.deposit.deposit_type})" %></td>
                <td><%= c.deposit.address %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div> <%# class="card" %> 
      <div>
        <%# Formulario de movimiento entre dep贸sitos %>
        <%= simple_form_for @move, wrapper: :maxwell_horizontal_form, defaults: { grid_wrapper_html: { class: 'col-sm-9' } } do |f| %>
          <legend class="form-section">
            <i class="fa fa-truck fa-lg mt-4"></i> Seleccione el dep贸sito destino
          </legend>
        <% end %>
      </div>
    </div> <%# class="modal-body" %>

    <div class="modal-footer">
      <button class="btn btn-secondary" data-dismiss="modal"><%= t('.modal.close') %></button>
    </div>
  </div>
</div>
